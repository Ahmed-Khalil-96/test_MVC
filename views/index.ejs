<%- include("header.ejs") %>

<div class="container mt-5 w-50 pt-3 bg-dark shadow-lg">
    <form action="/addUser" method="post">
        <input name="name" class="form-control my-3" type="text" placeholder="Enter your name">
        <input type="email" name="email" class="form-control my-3" placeholder="Enter your email">
        <input type="password" name="password" id="password" placeholder="Enter your password" class="form-control my-3">
        <input type="submit" name="submit" class="btn btn-info my-3">
    </form>
</div>

<div class="container mt-5 bg w-50 ">
    <table class="table text-center shadow-lg">
        <thead>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Action</th>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
             <tr>
                <td><%= user.name%></td>
                <td><%= user.email%></td>
                <td><%=user.password%></td>
                <td>
                    <a class="btn btn-outline-warning" href="/editUser/<%=user._id%>">Edit</a>
                    <a class="btn btn-outline-danger" href="/deleteUser/<%=user._id %>">Delete</a>
                </td>
             </tr>
            <% }) %>
        </tbody>
    </table>
</div>


<%- include("footer.ejs") %>